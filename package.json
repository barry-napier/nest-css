{
  "name": "nest-css",
  "version": "0.0.1",
  "description": "Nest CSS is a CSS framework for building modern, responsive web applications.",
  "scripts": {
    "build": "postcss src/styles.css -o dist/styles.css",
    "dev": "concurrently 'npm run watch' 'npm run serve'",
    "serve": "live-server --port=3000 --watch=dist --no-browser --entry-file=./public/index.html",
    "watch": "postcss src/styles.css -o dist/styles.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barry-napier/nest-css.git"
  },
  "keywords": [],
  "author": "Barry Napier",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/barry-napier/nest-css/issues"
  },
  "homepage": "https://github.com/barry-napier/nest-css#readme",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "live-server": "^1.2.2",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
